name: Fetch Organization Repositories

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  fetch-repos:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Fetch Repository URLs
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        ORG_NAME: your_organization_name  # Replace with your GitHub organization name
      run: |
        $headers = @{
            Authorization = "Bearer $env:GITHUB_TOKEN"
            Accept = "application/vnd.github.v3+json"
        }

        $page = 1
        $repo_urls = @()

        do {
            $uri = "https://api.github.com/orgs/$env:ORG_NAME/repos?per_page=100&page=$page"
            $response = Invoke-RestMethod -Uri $uri -Headers $headers -Method Get

            foreach ($repo in $response) {
                $repo_urls += $repo.html_url
            }

            $page++
        } while ($response.Count -gt 0)

        foreach ($url in $repo_urls) {
            Write-Output $url
        }
