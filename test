name: Fetch Organization Repositories

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  fetch-repos:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

     - name: Fetch Enterprise Organizations
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        ENTERPRISE_NAME: your_enterprise_name  # Replace with your GitHub Enterprise name
      run: |
        $headers = @{
            Authorization = "Bearer $env:GITHUB_TOKEN"
            Accept = "application/vnd.github.v3+json"
        }

        $org_urls = @()

        # Get list of organizations under the enterprise
        $uri = "https://api.github.com/enterprises/$env:ENTERPRISE_NAME/orgs"
        $orgsResponse = Invoke-RestMethod -Uri $uri -Headers $headers -Method Get

        foreach ($org in $orgsResponse) {
            $org_urls += $org.url  # Adjust this to use the appropriate URL field from the API response
        }

        foreach ($url in $org_urls) {
            Write-Output $url
        }
